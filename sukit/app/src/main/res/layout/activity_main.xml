<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_province"
        android:layout_width="410dp"
        android:layout_height="273dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lampang" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="กรุณาเลือกจังหวัด"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_province" />

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="387dp"
        android:layout_height="267dp"
        android:text="ข้อมูลของจังหวัด"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <Button
        android:id="@+id/btn_lampang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_lampang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_history" />

    <Button
        android:id="@+id/btn_nan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/btn_nan"
        app:layout_constraintStart_toEndOf="@+id/btn_lampang"
        app:layout_constraintTop_toTopOf="@+id/btn_lampang" />

    <Button
        android:id="@+id/btn_phitsanulok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/btn_phitsanulok"
        app:layout_constraintStart_toEndOf="@+id/btn_nan"
        app:layout_constraintTop_toTopOf="@+id/btn_nan" />

    <Button
        android:id="@+id/btn_uttaradit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_uttaradit"
        app:layout_constraintBottom_toBottomOf="@+id/btn_phitsanulok"
        app:layout_constraintEnd_toEndOf="@+id/tv_history" />
</androidx.constraintlayout.widget.ConstraintLayout>